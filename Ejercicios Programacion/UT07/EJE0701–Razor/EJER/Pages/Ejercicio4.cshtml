@page
@model EJER.Pages.Ejercicio4Model
@{
}

<!DOCTYPE html>
<html>
<head>
    <title>Ejercio3</title>
    <link rel="stylesheet" type="text/css" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <link rel="stylesheet" type="text/css" href="~/css/siteEjer1.css">
</head>
<body>
    <header>
        <h1>Cálculo de días</h1>
    </header>
    <main>
        <div class="row">
            <div class="col-md-6">
                <form class="custom-form m-lg-1" method="post" action="">
                    <fieldset>
                        @if (Request.Method == "POST")
                        {
                            <div class="mb-3">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <label for="numero1" class="form-label">Número 1:</label>
                                        <input type="number" id="numero1" name="numero1" class="form-control form-control-sm" required value="@Request.Form["numero1"]">
                                    </div>
                                    <div class="col">
                                        <input type="checkbox" id="checkbox1" name="checkbox" value="" class="form-check form-check-input mt-3">
                                    </div>
                                    <div class="col">
                                        <label for="numero2" class="form-label">Número 2:</label>
                                        <input type="number" id="numero2" name="numero2" class="form-control form-control-sm" required value="@Request.Form["numero2"]">
                                    </div>
                                    <div class="col">
                                        <input type="checkbox" id="checkbox2" name="checkbox" value="" class="form-check form-check-input mt-3">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <label for="numero3" class="form-label">Número 3:</label>
                                        <input type="number" id="numero3" name="numero3" class="form-control form-control-sm" required value="@Request.Form["numero3"]">
                                    </div>
                                    <div class="col">
                                        <input type="checkbox" id="checkbox3" name="checkbox" value="" class="form-check form-check-input mt-3">
                                    </div>
                                    <div class="col">
                                        <label for="numero4" class="form-label">Número 4:</label>
                                        <input type="number" id="numero4" name="numero4" class="form-control form-control-sm" required value="@Request.Form["numero4"]">
                                    </div>
                                    <div class="col">
                                        <input type="checkbox" id="checkbox4" name="checkbox" value="" class="form-check form-check-input mt-3">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="row">
                                    <div class="col">
                                        <button type="submit" class="btn btn-primary btn-sm">Ejecutar</button>
                                    </div>
                                    <div class="col">
                                        <button type="reset" class="btn btn-primary btn-sm">Limpiar</button>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="mb-3">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <label for="numero1" class="form-label">Número 1:</label>
                                        <input type="number" id="numero1" name="numero1" class="form-control form-control-sm" min="0" required>
                                    </div>
                                    <div class="col">
                                        <input type="checkbox" id="checkbox1" name="checkbox" value="checkbox1" class="form-check form-check-input mt-3">
                                    </div>
                                    <div class="col">
                                        <label for="numero2" class="form-label">Número 2:</label>
                                        <input type="number" id="numero2" name="numero2" class="form-control form-control-sm" min="0" required>
                                    </div>
                                    <div class="col">
                                        <input type="checkbox" id="checkbox2" name="checkbox" value="checkbox2" class="form-check form-check-input mt-3">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="row align-items-center">
                                    <div class="col">
                                        <label for="numero3" class="form-label">Número 3:</label>
                                        <input type="number" id="numero3" name="numero3" class="form-control form-control-sm" min="0" required>
                                    </div>
                                    <div class="col">
                                        <input type="checkbox" id="checkbox3" name="checkbox" value="checkbox3" class="form-check form-check-input mt-3">
                                    </div>
                                    <div class="col">
                                        <label for="numero4" class="form-label">Número 4:</label>
                                        <input type="number" id="numero4" name="numero4" class="form-control form-control-sm" min="0" required>
                                    </div>
                                    <div class="col">
                                        <input type="checkbox" id="checkbox4" name="checkbox" value="checkbox4" class="form-check form-check-input mt-3">
                                    </div>
                                </div>
                            </div>

                            <div class="mb-3">
                                <div class="row">
                                    <div class="col">
                                        <button type="submit" class="btn btn-primary btn-sm">Ejecutar</button>
                                    </div>
                                    <div class="col">
                                        <button type="reset" class="btn btn-primary btn-sm">Limpiar</button>
                                    </div>
                                </div>
                            </div>
                        }
                    </fieldset>
                </form>
            </div>
        </div>

    </main>
    <footer>
    </footer>
</body>
</html>

